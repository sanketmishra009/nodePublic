<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=
, initial-scale=1.0" />
  <title>Document</title>
  <link rel="stylesheet" href="styles/styles.css" />
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body>
  <div class="main w-full min-h-screen bg-zinc-900">
    <div class="form p-10 text-white">
      <form action="/create" method="post">
        <input name='title' class="block w-full rounded-md outline-none px-2 py-2 bg-zinc-800" type="text" name="" id=""
          placeholder="Title goes here." />
        <textarea name='details' class="block w-full rounded-md outline-none mt-2 px-2 py-2 bg-zinc-800 resize-none"
          placeholder="Write your task details here..."></textarea>
        <input class="mt-2 bg-blue-600 px-5 rounded-md" type="submit" value="creatreTask" />
      </form>
    </div>
    <div class="tasks flex gap-3 flex-wrap p-8">
      <% if(files.length> 0){
        files.forEach((file)=>{ %>
        <div class="task relative w-72 px-3 pt-4 bg-zinc-800 rounded">
          <h1 class="text-white text-3xl tracking-tighter">
            <%= file%>
          </h1>
          <div class="links mt-10 flex justify-between">
            <a href="/files/<%= file%>" class="text-blue-500">Read More...</a>
            <a href="/edit/<%= file%>" class="text-blue-500">Edit</a>
          </div>
        </div>
        <% console.log(file); }) } else{ %>
          <h1 class="text-zinc-400 block ml-10">No tasks Yet</h1>
          <%} %>
    </div>
    <script src="js/script.js"></script>
</body>

</html>